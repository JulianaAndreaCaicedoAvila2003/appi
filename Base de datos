CREATE TABLE Usuario (
    id_usuario serial PRIMARY KEY,
    nombre VARCHAR(50) NOT NULL,
    correo VARCHAR(100) UNIQUE NOT NULL,
    usuario VARCHAR(20) UNIQUE NOT NULL,
    contrasena VARCHAR(64) NOT NULL, 
    fecha_registro DATE,
    telefono VARCHAR(20)
);

