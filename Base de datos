CREATE TABLE TareasDeEntrenamiento (
    id serial PRIMARY KEY,
    estado VARCHAR(20),
    descripcion TEXT,
    proceso_perro_id INT REFERENCES Perro(id_perro),
    historial_entrenamiento TEXT
);

-- Tarea de Entrenamiento 1
