SELECT * FROM Notificacion;

CREATE TABLE PlanDeEntrenamiento (
    id serial PRIMARY KEY,
    nombre VARCHAR(100) NOT NULL,
    descripcion TEXT,
    tipo VARCHAR(50),
    entrenador_id INT REFERENCES Entrenador(id),
    video_entrenamiento BYTEA,
    imagen_entrenamiento BYTEA
);

