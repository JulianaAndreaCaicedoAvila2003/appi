CREATE TABLE Perro (
    id_perro serial PRIMARY KEY,
    nombre VARCHAR(50) NOT NULL,
    edad INT,
    raza VARCHAR(50),
    nivel_comportamiento INT,
    propietario_id INT REFERENCES Usuario(id_usuario)
);

-- Perro 1 (Asociado al Usuario 1)
INSERT INTO Perro (nombre, edad, raza, nivel_comportamiento, propietario_id)
VALUES ('Perro1', 3, 'Golden Retriever', 4, 1);

